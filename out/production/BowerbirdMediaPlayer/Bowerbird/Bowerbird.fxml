<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root prefHeight="600" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <left>
    </left>

    <bottom>
        <VBox>
            <VBox>
                <Slider fx:id="timeSlider" onScroll="#handleTimeScrollEvent" />
                <HBox>
                    <Label fx:id="currentTime" text="00.00.00" />
                    <Text text=" / " />
                    <Label fx:id="totalTime" text="00.00.00" />
                </HBox>
            </VBox>
            <HBox alignment="CENTER" spacing="10">
                <padding><Insets bottom="10" left="12" right="12" top="15" /></padding>
                <Button fx:id="playButton" disable="true" onAction="#handlePlayButtonAction" text="Play" />
                <Button fx:id="pauseButton" disable="true" onAction="#handlePauseButtonAction" text="Pause" />
                <Button fx:id="stopButton" disable="true" onAction="#handleStopButtonAction" text="Stop" />
                <Button fx:id="addButton" onAction="#handleAddSongButtonAction" text="Add Song" />
                <VBox alignment="CENTER">
                    <Text text="Volume" />
                    <Slider fx:id="volumeSlider" onScroll="#handleVolumeScrollEvent" />
                </VBox>
            </HBox>
        </VBox>
    </bottom>

    <top>
        <HBox>

        </HBox>
    </top>

    <right>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Songs">
                <Label fx:id="songInfo" text="Song Information" />
            </Tab>
            <Tab text="Playlists">
                <Text text="A list of play lists go here" />
            </Tab>
            <Tab text="Sort By">
                <Text text="A list of sorting options go here" />
                <Accordion fx:id="sortOptions">
                    <panes>
                        <TitledPane text="Title">
                            <content>
                                <Text text="123" />
                            </content>
                        </TitledPane>
                        <TitledPane text="Artist">
                            <content>
                                <Text text="123" />
                            </content>
                        </TitledPane>
                        <TitledPane text="Song">
                            <content>
                                <Text text="123" />
                            </content>
                        </TitledPane>
                        <TitledPane text="Album">
                            <content>
                                <Text text="123" />
                            </content>
                        </TitledPane>
                        <TitledPane text="Genre">
                            <content>
                                <Text text="123" />
                            </content>
                        </TitledPane>
                        <TitledPane text="Year">
                            <content>
                                <Text text="123" />
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
            </Tab>
            <Tab text="Search">
                <TextField fx:id="fieldSearch" />
            </Tab>
        </TabPane>
    </right>

    <center>
        <VBox fx:id="songTab" minWidth="300" prefWidth="500" />
    </center>

    <stylesheets>
        <URL value="@Bowerbird.css" />
    </stylesheets>
</fx:root>
